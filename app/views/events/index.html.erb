<h1>Current Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @future_events.each do |event| %>
      <tr>
        <td><%= link_to "#{event.name}", event %></td>
        <td><%= event.description %></td>
        <td><%= event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
        <td><%= event.ends_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Past Events</h1>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Starts at</th>
            <th>Ends at</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @past_events.each do |event| %>
            <tr>
                <td><%= link_to "#{event.name}", event %></td>
                <td><%= event.description %></td>
                <td><%= event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
                <td><%= event.ends_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
            </tr>
        <% end %>
    </tbody>
</table>
