<h1>Events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to "#{event.name}", event %></td>
        <td><%= event.description %></td>
        <td><%= event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
        <td><%= event.ends_at.strftime('%A, %d %b %Y %l:%M %p') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
